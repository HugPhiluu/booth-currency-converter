{
  "manifest_version": 3,
  "name": "Japanese E-commerce Currency Converter",
  "description": "Convert JPY prices on Japanese shopping sites (Booth, Mercari, Amazon JP, etc.) into your preferred currency with enhanced styling and features.",
  "version": "1.0",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.booth.pm/*",
    "*://*.mercari.com/*",
    "*://auctions.yahoo.co.jp/*",
    "*://shopping.yahoo.co.jp/*",
    "*://*.rakuten.co.jp/*",
    "*://*.amazon.co.jp/*",
    "https://api.frankfurter.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.booth.pm/*",
        "*://*.mercari.com/*", 
        "*://auctions.yahoo.co.jp/*",
        "*://shopping.yahoo.co.jp/*",
        "*://*.rakuten.co.jp/*",
        "*://*.amazon.co.jp/*"
      ],
      "js": ["browser-polyfill.js", "content.js"]
    }
  ],
  "commands": {
    "toggle-conversion": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle currency conversion on/off"
    }
  }
}